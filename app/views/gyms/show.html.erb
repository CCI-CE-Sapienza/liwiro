<div>

  <div class="card one" style="width: 18rem;">
    <%= image_tag("palestra.jpg", :class => "card-img-top", :alt => "Card image cap") %>
    <div class="card-body">
      <h1><%= @gym.username %></h1>
      <p class="card-text"><br>Email: <i><%= @gym.email %></i></p>
      <p class="card-text"><br>Address: <i><%= @gym.address %></i></p>
      <p class="card-text"><br>Price: <i><%= @gym.price %></i></p>
    </div>
  </div>

  <div class="card two">
    <div id="map"  style="height: 430px; margin: 2%; background: grey" > </div>
  </div>

</div>

</br>

<div class="card">
  <div class="card-body">
    <div class="media">
      <%= image_tag("comments.png", :size =>"20x20") %>
      <div class="media-body">
        <h5 class="mt-0">Comments</h5>
