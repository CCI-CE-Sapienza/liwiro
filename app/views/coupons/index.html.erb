<p id="notice"><%= notice %></p>
<div class="card" style="width: 18rem;">
  <%= image_tag("coupon.png", :class => "card-img-top", :alt => "Card image cap") %>
  <div class="card-body">
    <h1>Coupon</h1><p class="card-text"></p>
  </div>
</div>
</br>
<hr>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Code</th>
      <th scope="col">gym</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coupons.each do |coupon| %>
      <tr>
        <td><%= coupon.code %></td>
        <td><%= coupon.gym %></td>
        <td><%= link_to 'Show', coupon %></td>
        <% if athlete_signed_in? && !(coupon.already_joined(coupon, current_athlete))%>
            <td><%= link_to "join", coupons_join_path(:id => coupon.id), method: :put %></td>
        <% end %>
        <% if athlete_signed_in? && coupon.already_joined(coupon, current_athlete) %>
            <td><%= link_to "leave", coupons_leave_path(:id => coupon.id), method: :put %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "<button type='button' class='btn btn-primary btn-danger navbar-btn' data-toggle='modal' data-target='#'>New Coupon</button>".html_safe, new_coupon_path %>
