<br>
<h1>Your course comment</h1>
<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Text</th>
      <th scope="col">Athlete</th>
      <th scope="col">Course</th>

    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= @course_comment.text %></td>
        <td><%= @course_comment.athlete.username %></td>
        <td><%= @course_comment.course.name %></td>
      </tr>
  </tbody>
</table>

<%= link_to "<button type='button' class='btn btn-primary navbar-btn' data-toggle='modal' data-target=''>Edit</button>".html_safe, edit_course_comment_path(@course_comment)%>

<%= link_to "<button type='button' class='btn btn-primary navbar-btn' data-toggle='modal' data-target=''>Back</button>".html_safe, course_comments_path%>
