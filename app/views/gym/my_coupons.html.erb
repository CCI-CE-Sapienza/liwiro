<div class="card shadow p-3 mb-5 bg-white rounded" style="width: 18rem;">
  <%= image_tag("soldi.png", :class => "card-img-top", :alt => "Card image cap") %>
  <div class="card-body">
    <h1>My Coupons </h1><p class="card-text"></p>
  </div>
</div>
</br>

<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% (@coupons || []).each do |coupon| %>
      <tr>
        <td><%= coupon.name %></td>
        <td><%= coupon.code %></td>
        <td><%= link_to 'Show', coupon , :class=>"btn btn-outline-primary"%></td>
        <td><%= link_to 'Edit', edit_coupon_path(coupon) , :class=>"btn btn-outline-primary"%></td>
        <td><%= link_to 'Destroy', coupon, method: :delete, data: { confirm: 'Are you sure?' } , :class=>"btn btn-outline-primary"%></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to "<button type='button' class='btn btn-primary navbar-btn' data-toggle='modal' data-target='#'>New Coupon</button>".html_safe, new_coupon_path %>
