<div class="card" style="width: 18rem;">
  <%= image_tag("coupon.png", :class => "card-img-top", :alt => "Card image cap") %>
  <div class="card-body">
    <h1>My Coupons </h1><p class="card-text"></p>
  </div>
</div>
</br>
<hr>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Code</th>
      <th scope="col">gym</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% (@coupons || []).each do |coupon| %>
      <tr>
        <td><%= coupon.code %></td>
        <td><%= coupon.gym.username %></td>
        <td><%= link_to 'Show', coupon %></td>
        <td><%= link_to 'Edit', edit_coupon_path(coupon) %></td>
        <td><%= link_to 'Destroy', coupon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to "<button type='button' class='btn btn-primary btn-danger navbar-btn' data-toggle='modal' data-target='#'>New Coupon</button>".html_safe, new_coupon_path %>
