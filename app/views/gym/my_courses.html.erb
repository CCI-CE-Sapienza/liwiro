<div class="card shadow p-3 mb-5 bg-white rounded" style="width: 18rem;">
  <%= image_tag("course.svg", :class => "card-img-top", :alt => "Card image cap") %>
  <div class="card-body">
    <h1>My Courses </h1><p class="card-text"></p>
  </div>
</div>
</br>

<div class="container">
  <div class="row scroll">

    <table class="table table-striped">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <%  (@courses || []).each do |course| %>
          <tr>
            <td><%= course.name %></td>
            <td><%= link_to 'Show', course , :class=>"btn btn-outline-primary"%></td>
            <td><%= link_to 'Edit', edit_course_path(course) , :class=>"btn btn-outline-primary"%></td>
            <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } , :class=>"btn btn-outline-primary"%></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>

<br>

<%= link_to "<button type='button' class='btn btn-primary navbar-btn' data-toggle='modal' data-target='#'>New Course</button>".html_safe, new_course_path %>
