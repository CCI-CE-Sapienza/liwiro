<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>

<div class="card text-center shadow p-3 mb-5 bg-white rounded">
  <div class="card-header bg-dark text-white">
    <h2>Athlete Sign-up</h2>
  </div>
  <div class="card-body">

      <div class="field">
        <h5><%= f.label :username %></h5>
        <%= f.text_field :username, autofocus: true, autocomplete: "username" , :class =>"form-control" %>
      </div>
      <br>

      <div class="field">
        <h5><%= f.label :email %></h5>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" , :class =>"form-control" %>
      </div>
      <br>

      <div class="field">
        <h5><%= f.label :password %></h5>
        <%= f.password_field :password, autocomplete: "new-password" , :class =>"form-control" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
      </div>
      <br>

        <div class="field">
          <h5><%= f.label :password_confirmation %></h5>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" , :class =>"form-control"%>
        </div>
      <br>

      <div class="actions">
        <%= f.submit "Sign-up" , :class=>"btn btn-primary btn-block"%>
      </div>
      <% end %>

      <%= render "athletes/shared/links" %>

  </div>
</div>
