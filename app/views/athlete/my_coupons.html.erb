<div class="card shadow p-3 mb-5 bg-white rounded" style="width: 18rem;">
  <%= image_tag("soldi.png", :class => "card-img-top", :alt => "Card image cap") %>
  <div class="card-body">
    <h1>My Coupons </h1><p class="card-text"></p>
  </div>
</div>
</br>

<div class="container">
  <div class="row scroll">

    <table class="table table-striped">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Code</th>
          <th scope="col">From gym</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% (@coupons || []).each do |coupon| %>
          <tr>
            <td><%= coupon.code %></td>
            <td><%= coupon.gym.username %></td>
            <td><%= link_to 'Show', coupon , :class=>"btn btn-outline-primary"%></td>
            <td><%= link_to "leave", coupons_leave_path(:id => coupon.id), method: :put , :class=>"btn btn-outline-primary"%></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>

<br>
