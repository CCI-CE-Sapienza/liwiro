<div class="card" style="width: 18rem;">
  <%= image_tag("coupon.png", :class => "card-img-top", :alt => "Card image cap") %>
  <div class="card-body">
    <h1>My Coupons </h1><p class="card-text"></p>
  </div>
</div>
</br>
<hr>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Code</th>
      <th scope="col">gym</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% (@coupons || []).each do |coupon| %>
      <tr>
        <td><%= coupon.code %></td>
        <td><%= coupon.gym %></td>
        <td><%= link_to 'Show', coupon %></td>
        <% if athlete_signed_in? %>
            <td><%= link_to "leave", coupons_leave_path(:id => coupon.id), method: :put %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
