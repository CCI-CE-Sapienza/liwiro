<div class="card" style="width: 18rem;">
  <%= image_tag("palestra.jpg", :class => "card-img-top", :alt => "Card image cap") %>
  <div class="card-body">
    <h1>My Gyms </h1><p class="card-text"></p>
  </div>
</div>
</br>
<hr>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Email</th>
      <th scope="col">Likes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%  (@gyms || []).each do |gym| %>
      <tr>
        <td><%= gym.email %></td>
        <td><%= gym.likes %></td>
        <td><%= link_to 'Show', gym %></td>
        <% if athlete_signed_in? %>
            <td><%= link_to "leave", gyms_leave_path(:id => gym.id), method: :put %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
