<div class="card shadow p-3 mb-5 bg-white rounded">
  <div class="card-body">
    <h3 class="card-title"> Change settings  </h3>

    <%= form_with(model: @athlete, local: true) do |form| %>

      <div class="field">
        <%= form.label :height %>
        <%= form.number_field :height , :class =>"form-control"%>
      </div>
      <br/>

      <div class="field">
        <%= form.label :weight %>
        <%= form.number_field :weight , :class =>"form-control"%>
      </div>
      <br/>

      <div class="field">
        <%= form.label :age %>
        <%= form.number_field :age , :class =>"form-control"%>
      </div><br>
      <br/>

      <div class="actions">
        <%= form.submit "Change my features", :class=>"btn btn-primary" %>
      </div>

    <% end %>

  </div>
</div>
