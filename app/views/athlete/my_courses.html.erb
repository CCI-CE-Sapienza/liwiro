<div class="card" style="width: 18rem;">
  <%= image_tag("course.svg", :class => "card-img-top", :alt => "Card image cap") %>
  <div class="card-body">
    <h1>My Courses </h1><p class="card-text"></p>
  </div>
</div>
</br>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Gym</th>
      <th scope="col">Likes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%  (@courses || []).each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.gym.username %></td>
        <td><%= course.likes %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to "leave", courses_leave_path(:id => course.id), method: :put %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
