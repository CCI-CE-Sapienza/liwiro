<div class="card" style="width: 18rem;">
  <%= image_tag("course.png", :class => "card-img-top", :alt => "Card image cap") %>
  <div class="card-body">
    <h1>Courses </h1><p class="card-text"></p>
  </div>
</div>
</br>
<hr>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">gym</th>
      <th scope="col">Likes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.gym %></td>
        <td><%= course.likes %></td>
        <td><%= link_to 'Show', course %></td>
        <% if athlete_signed_in? && !(course.already_joined(course, current_athlete)) %>
            <td><%= link_to "join", courses_join_path(:id => course.id), method: :put %></td>
        <% end %>
        <% if athlete_signed_in? && course.already_joined(course, current_athlete) %>
            <td><%= link_to "leave", courses_leave_path(:id => course.id), method: :put %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "<button type='button' class='btn btn-primary btn-danger navbar-btn' data-toggle='modal' data-target='#'>New Course</button>".html_safe, new_course_path %>
